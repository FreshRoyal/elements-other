			<set name="armor">Shield</set>
			<set name="armorClass">+2</set>
			<set name="proficiency">ID_DCAD_MH_PROFICIENCY_ARMOR_PROFICIENCY_RIOT_SHIELD</set>
		</setters>
		<rules>
			<stat name="ac:riot shield" value="2" bonus="riot shield" />
		</rules>
	</element>

